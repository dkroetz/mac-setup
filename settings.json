{
    // General Settings
    "breadcrumbs.enabled": false,
    "explorer.confirmDelete": false,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.useEditorAsCommitInput": false,
    "github.copilot.editor.enableAutoCompletions": true,
    "json.format.keepLines": true,
    "security.workspace.trust.untrustedFiles": "open",
    "update.showReleaseNotes": false,
    "window.zoomLevel": 0.5,
    "workbench.colorTheme": "Aura Dark",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": true,
    "yaml.validate": false,
    "zenMode.hideLineNumbers": false,
    "workbench.colorCustomizations": {
        // "terminal.background": "#131212",
        // "terminal.foreground": "#dddad6",
        "terminal.ansiBlack": "#110F18",
        "terminal.ansiBrightBlack": "#6D6D6D",
        "terminal.ansiRed": "#FF6767",
        "terminal.ansiBrightRed": "#FFCA85",
        "terminal.ansiGreen": "#61FFCA",
        "terminal.ansiBrightGreen": "#A277FF",
        "terminal.ansiYellow": "#FFCA85",
        "terminal.ansiBrightYellow": "#FFCA85",
        "terminal.ansiBlue": "#A277FF",
        "terminal.ansiBrightBlue": "#A277FF",
        "terminal.ansiMagenta": "#A277FF",
        "terminal.ansiBrightMagenta": "#A277FF",
        "terminal.ansiCyan": "#61FFCA",
        "terminal.ansiBrightCyan": "#61FFCA",
        "terminal.ansiWhite": "#EDECEE",
        "terminal.ansiBrightWhite": "#FDF4C1",
    },


    // Editor Settings
    "editor.fontFamily": "SauceCodePro Nerd Font Mono",
    "editor.fontWeight": "550",
    "editor.lightbulb.enabled": "onCode",
    "editor.lineNumbers": "relative",
    "editor.linkedEditing": true,
    "editor.minimap.enabled": false,
    "editor.suggest.insertMode": "replace",
    "editor.formatOnSave": true,
    "notebook.editorOptionsCustomizations": {
        "editor.tabSize": 4,
        "editor.indentSize": 4,
        "editor.insertSpaces": true
    },

    // Terminal Settings
    "terminal.integrated.fontFamily": "SauceCodePro Nerd Font Mono",
    "terminal.integrated.fontWeight": 550,

    // Python Settings
    "notebook.formatOnSave.enabled": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
            "source.organizeImports": "always"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
    },

    // VIM Settings
    "vim.leader": "<Space>",
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        // NAVIGATION
        // switch b/w buffers
        { "before": [ "<S-h>" ], "commands": [ ":bprevious" ] },
        { "before": [ "<S-l>" ], "commands": [ ":bnext" ] },
        // split panes
        { "before": [ "leader", "v" ], "commands": [ ":vsplit" ] },
        { "before": [ "leader", "s" ], "commands": [ ":split" ] },
        // panes
        { "before": [ "leader", "h" ], "commands": [ "workbench.action.focusLeftGroup" ] },
        { "before": [ "leader", "j" ], "commands": [ "workbench.action.focusBelowGroup" ] },
        { "before": [ "leader", "k" ], "commands": [ "workbench.action.focusAboveGroup" ] },
        { "before": [ "leader", "l" ], "commands": [ "workbench.action.focusRightGroup" ] },
        // Write / Quit / Exit
        { "before": [ "leader", "w" ], "commands": [ ":w!" ] },
        { "before": [ "leader", "q" ], "commands": [ ":q!" ] },
        { "before": [ "leader", "x" ], "commands": [ ":x!" ] },

        // VSCode Commands
        { "before": [ "leader", "p" ], "commands": [ "workbench.action.quickOpen" ] },
        { "before": [ "leader", "f" ], "commands": [ "editor.action.formatDocument" ] },

        // Nice to have
        { "before": [ "<leader>", "c", "a" ], "commands": [ "editor.action.quickFix" ] },
        { "before": [ "g", "h" ], "commands": [ "editor.action.showDefinitionPreviewHover" ] }
    ],
    "vim.visualModeKeyBindings": [
        // Stay in visual mode while indenting
        { "before": [ "<" ], "commands": [ "editor.action.outdentLines" ] },
        { "before": [ ">" ], "commands": [ "editor.action.indentLines" ] },
        // Move selected lines while staying in visual mode
        { "before": [ "J" ], "commands": [ "editor.action.moveLinesDownAction" ] },
        { "before": [ "K" ], "commands": [ "editor.action.moveLinesUpAction" ] },
    ],
    "workbench.productIconTheme": "fluent-icons",
    "liveServer.settings.CustomBrowser": "firefox",
    "liveServer.settings.AdvanceCustomBrowserCmdLine": ""
}
